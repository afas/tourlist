<div class="leftColumn">
  <div class="inner">
    <%= render :partial => 'layouts/top10_countries' %>
  </div>
</div>
<div class="mainColumn">
  <div class="inner">
    <div class="content">
      <h1>Список статических страниц сайта</h1>

      <table>
        <tr>
          <th>Title</th>
          <th>Alias</th>
          <th>Content</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>

        <% @static_pages.each do |static_page| %>
            <tr>
              <td><%= static_page.title %></td>
              <td><%= static_page.alias %></td>
              <td><%=
                  raw(static_page.content.markdown)
              %></td>
              <td><%= link_to 'Show', static_page %></td>
              <td><%= link_to 'Edit', edit_static_page_path(static_page) %></td>
              <td><%= link_to 'Destroy', static_page, :confirm => 'Are you sure?', :method => :delete %></td>
            </tr>
        <% end %>
      </table>

      <br/>

      <%= link_to 'New Static page', new_static_page_path %>
    </div>
  </div>
</div>
<div class="clear"></div>