<%= form_for(@country, :html => {:multipart => true}) do |f| %>
    <% if @country.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@country.errors.count, "error") %> prohibited this country from being saved:</h2>

          <ul>
            <% @country.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :bronni_id %>
      <br/>
      <%= f.text_field :bronni_id %>
    </div>
    <div class="field">
      <%= f.label :country_order %>
      <br/>
      <%= f.text_field :country_order, :cols => 3 %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :image %>
      <br/>
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.label :top %>
      <br/>
      <%= f.check_box :top %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
